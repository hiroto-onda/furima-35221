<%= render "shared/second-header"%>

<div class='transaction-test'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      こんにちは
       <%= link_to current_user.nick_name, class: "user-nick_name" %>
      さん
    </h1>
<center>
<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
    <div class="Card__title">
    <h2>カード情報</h2>
  </div>
  <div class="Card_info">
    【カード番号】
    <br>
    <%= "**** **** **** " + @card[:last4] %>
    <%# カード番号の下4桁を取得 %>

    <br>
    【有効期限】
    <br>
    <%= @card[:exp_month] %>
    <%# 有効期限の「月」を取得 %>
    /
    <%= @card[:exp_year] %>
    <%# 有効期限の「年」を取得 %>
  </div>
  <div class="Account__info">
    <h2>ユーザー情報</h2>
  </div>
  <div class="AccountPage__form">
    <%= form_for(current_user) do |f| %>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :ニックネーム %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :nick_name, autofocus: true %>
        </div>
        <div class="FormField__name">
          <%= f.label :姓 %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :family_name, autofocus: true %>
        </div>
         <div class="FormField__name">
          <%= f.label :名 %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="FormField__name">
          <%= f.label :姓（カタカナ） %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :family_name_kana, autofocus: true %>
        </div>
        <div class="FormField__name">
          <%= f.label :名（カタカナ） %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__email">
          <%= f.label :email %>
        </div>
        <div class="FormField__email">
          <%= f.email_field :email %>
        </div>
        <br>
      </div>
      <%= f.submit "更新する" %>
    <% end %>
        <br>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    <br>
    <%= link_to "トップページ", root_path%>
  </div>
</div>
</center>
</div>
</div>

<%= render "shared/second-footer"%>


